{
  "name": "trs80-emulator",
  "version": "1.0.8",
  "description": "TRS-80 Model III emulator",
  "main": "dist/main/index.js",
  "typing": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "scripts": {
    "build": "npm run build:main && npm run build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "lint": "tslint --project . --format codeFrame --exclude 'src/Decode*'",
    "lint:fix": "npm run lint -- --fix",
    "start": "rollup -c && http-server docs",
    "watch": "rollup -c --watch"
  },
  "keywords": [
    "trs-80",
    "trs80",
    "emulator"
  ],
  "author": "Lawrence Kesteloot <lk@teamten.com> (https://www.teamten.com/lawrence/)",
  "repository": "https://github.com/lkesteloot/trs80-emulator",
  "license": "MIT",
  "dependencies": {
    "z80-base": "^1.0.3",
    "z80-emulator": "^1.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@rollup/plugin-typescript": "^2.0.1",
    "http-server": "^0.12.0",
    "rollup": "^1.27.14",
    "tslib": "^1.10.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  }
}
